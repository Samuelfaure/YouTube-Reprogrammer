<%= button_to t('.logout'), login_path, method: :delete , class: %(text-white bg-blue-700 hover:bg-blue-800
  hover:bg-orange-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5
  text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900) %>

  <div>
    <h2 class="text-4xl font-bold dark:text-white">The following videos will be liked:</h2>
    <ul>
      <% @videos.each do |video| %>
        <li>
          <%= link_to video[:title], video[:link], class: %w(font-medium text-blue-600 dark:text-blue-500
            hover:underline) %>
        </li>
        <% end %>
    </ul>

    <%= button_to t('.like_all'), likes_path, method: :post , class: %(m-2 text-white bg-red-700 hover:bg-red-800
      focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2
      mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900) %>

      <%= button_to t('.unlike_all'), likes_path, method: :delete , class: %(m-2 text-white bg-orange-700
        hover:bg-orange-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5
        py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900) %>
  </div>
